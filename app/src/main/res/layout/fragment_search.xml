<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".SearchFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchUserText"
        android:layout_marginTop="20dp"
        android:text="Search users"
        android:layout_marginLeft="30dp"
        android:fontFamily="@font/sf_font"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30sp"/>

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded_background_white"
        android:drawableLeft="@drawable/ic_search_light"
        android:drawablePadding="5dp"
        android:elevation="4dp"
        android:hint="Search for a user..."
        android:paddingStart="10dp"
        android:shadowColor="#5A5757"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@id/searchUserText"
        android:layout_marginTop="30dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_below="@id/search_bar"/>
</RelativeLayout>