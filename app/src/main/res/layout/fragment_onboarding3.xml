<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Onboarding.OnboardingFragment3">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_marginTop="100dp"
        android:id="@+id/lottieAnimation"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        app:lottie_rawRes="@raw/socialmedia_2"
        app:lottie_speed="0.5"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:fontFamily="@font/sf_font"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_below="@id/text"
        android:id="@+id/subText"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_font"
        android:textSize="18sp"
        android:textColor="#003A61"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="70dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/backButton"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_alignParentBottom="true"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:elevation="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/blue_rounded">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/backIcon"
                android:layout_toLeftOf="@id/backText"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back"
                app:tint="@color/white" />

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/backText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:fontFamily="@font/sf_font"
                android:textColor="@color/white"
                android:textSize="15sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/finishButton"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_alignParentBottom="true"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:elevation="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/blue_rounded">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/finishIcon"
                android:layout_toRightOf="@id/finishText"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_check" />

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/finishText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finish"
                android:fontFamily="@font/sf_font"
                android:textColor="@color/white"
                android:textSize="15sp"/>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>